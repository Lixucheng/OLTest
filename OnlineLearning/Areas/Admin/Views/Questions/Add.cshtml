            $("#b2").click(function () {
      
            });
            $("#b3").click(function () {
          
            });
            $("#b4").click(function () {
      
            });
        });
    </script>
    
    <script>
        var editor = new Simditor({
            textarea: $('#editor'),
            toolbar: [
                'title',
                'bold',
                'underline',
                'strikethrough',
                'color',
                'ol', 'ul',
                'blockquote',
                'code',
                'table',
                'link',
                'image',
                'hr',
                'indent', 'outdent',
                'emoji'
            ],
            upload: {
                'url': '/upload',
                'fileKey': 'upfile',
                'connectionCount': 4
            },
            pasteImage: true,
            emoji: {
                imagePath: '/Scripts/bower_components/simditor-emoji/images/emoji/'
            },
            markdown: true
        });
    </script>

}

